<launch>
  <arg name="robot_name"/>
  <arg name="size" value="0.16" />
  <node pkg="apriltags_ros" type="apriltag_detector_node" name="apriltag_detector" output="screen">
    <!-- Remap topic required by the node to custom topics -->
    <remap from="image_rect" to="camera/image_raw" />
    <remap from="camera_info" to="camera/camera_info" />

    <!-- Optional: Subscribe to the compressed stream-->
    <param name="image_transport" type="str" value="raw" />

    <!-- Select the tag family: 16h5, 25h7, 25h9, 36h9, or 36h11(default) -->
    <param name="tag_family" type="str" value="36h11" />

    <!-- Enable projected optical measurements for more accurate tag transformations -->
    <!-- This exists for backwards compatability and should be left true for new setups -->
    <param name="projected_optics" type="bool" value="true" />

    <!-- Describe the tags -->
    <rosparam param="tag_descriptions" subst_value="True">[
      {id: 0, size: $(arg size), frame_id: "tag_0/$(arg robot_name)"},
      {id: 1, size: $(arg size), frame_id: "tag_1/$(arg robot_name)"},
      {id: 2, size: $(arg size), frame_id: "tag_2/$(arg robot_name)"},
      {id: 3, size: $(arg size), frame_id: "tag_3/$(arg robot_name)"},
      {id: 4, size: $(arg size), frame_id: "tag_4/$(arg robot_name)"},
      {id: 5, size: $(arg size), frame_id: "tag_5/$(arg robot_name)"},
      {id: 6, size: $(arg size), frame_id: "tag_6/$(arg robot_name)"},
      {id: 7, size: $(arg size), frame_id: "tag_7/$(arg robot_name)"},
      {id: 8, size: $(arg size), frame_id: "tag_8/$(arg robot_name)"},
      {id: 9, size: $(arg size), frame_id: "tag_9/$(arg robot_name)"},
      {id: 10, size: $(arg size), frame_id: "tag_10/$(arg robot_name)"},
      {id: 11, size: $(arg size), frame_id: "tag_11/$(arg robot_name)"},
      {id: 12, size: $(arg size), frame_id: "tag_12/$(arg robot_name)"},
      {id: 13, size: $(arg size), frame_id: "tag_13/$(arg robot_name)"}]
    </rosparam>
  </node>
</launch>
