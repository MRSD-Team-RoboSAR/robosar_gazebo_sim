<launch>
  <arg name="robot_name"/>
  <arg name="size" value="0.16" />
  <node pkg="apriltags_ros" type="apriltag_detector_node" name="apriltag_detector" output="screen">
    <!-- Remap topic required by the node to custom topics -->
    <remap from="image_rect" to="camera/image_raw" />
    <remap from="camera_info" to="camera/camera_info" />

    <!-- Optional: Subscribe to the compressed stream-->
    <param name="image_transport" type="str" value="raw" />

    <!-- Select the tag family: 16h5, 25h7, 25h9, 36h9, or 36h11(default) -->
    <param name="tag_family" type="str" value="36h11" />

    <!-- Enable projected optical measurements for more accurate tag transformations -->
    <!-- This exists for backwards compatability and should be left true for new setups -->
    <param name="projected_optics" type="bool" value="true" />

    <!-- Describe the tags -->
    <rosparam param="tag_descriptions" subst_value="True">[
      {id: 0, size: $(arg size), frame_id: "$(arg robot_name)/tag_0"},
      {id: 1, size: $(arg size), frame_id: "$(arg robot_name)/tag_1"},
      {id: 2, size: $(arg size), frame_id: "$(arg robot_name)/tag_2"},
      {id: 3, size: $(arg size), frame_id: "$(arg robot_name)/tag_3"},
      {id: 4, size: $(arg size), frame_id: "$(arg robot_name)/tag_4"},
      {id: 5, size: $(arg size), frame_id: "$(arg robot_name)/tag_5"},
      {id: 6, size: $(arg size), frame_id: "$(arg robot_name)/tag_6"},
      {id: 7, size: $(arg size), frame_id: "$(arg robot_name)/tag_7"},
      {id: 8, size: $(arg size), frame_id: "$(arg robot_name)/tag_8"},
      {id: 9, size: $(arg size), frame_id: "$(arg robot_name)/tag_9"},
      {id: 10, size: $(arg size), frame_id: "$(arg robot_name)/tag_10"},
      {id: 11, size: $(arg size), frame_id: "$(arg robot_name)/tag_11"},
      {id: 12, size: $(arg size), frame_id: "$(arg robot_name)/tag_12"},
      {id: 13, size: $(arg size), frame_id: "$(arg robot_name)/tag_13"}]
    </rosparam>
  </node>
</launch>
