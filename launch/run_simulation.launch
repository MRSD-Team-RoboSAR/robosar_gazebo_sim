<?xml version="1.0"?>
<launch>
  <!-- Find xacro -->
  <arg name="model" value="$(find tutorial)/urdf/khepera4_lrf.xacro"/>
  <!-- load our urdf model (string) into global parameter called "robot_description"-->
  <!-- xacro parses xacro files and returns a urdf file -->
  <param name="khepera4_lrf_urdf"
         command="$(find xacro)/xacro $(arg model)" />

  <!-- Run simulator -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="false" />
    <arg name="gui" value="true" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>

  <!-- Spawn robot(s) -->
  <group ns="robosar_agent_bringup_node">
    <group ns="agent1">
      <include file="$(find tutorial)/launch/spawn_robot.launch" >
        <arg name="init_position" value="-x 0 -y 0 -z 0" />
        <arg name="robot_description"  value="/khepera4_lrf_urdf" />
        <arg name="robot_name"  value="Agent1" />
      </include>
    </group>
  </group>

</launch>


